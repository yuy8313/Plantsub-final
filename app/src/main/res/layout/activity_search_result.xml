<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/camara_img"
    tools:context=".SearchResult">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="꽃순이의 생각은 이렇습니다."
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:fontFamily="@font/maplestory_light"
        android:textColor="#000000"/>

    <LinearLayout
        android:id="@+id/layout_result1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:background="#FEE7F2">

        <LinearLayout
            android:id="@+id/layout_result1_img"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <LinearLayout
            android:id="@+id/layout_result1_text"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/layout_result1_btn"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_result2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:background="#FEE7F2">

        <LinearLayout
            android:id="@+id/layout_result2_img"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <LinearLayout
            android:id="@+id/layout_result2_text"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/layout_result2_btn"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_result3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:background="#FEE7F2">

        <LinearLayout
            android:id="@+id/layout_result3_img"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <LinearLayout
            android:id="@+id/layout_result3_text"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/layout_result3_btn"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>



