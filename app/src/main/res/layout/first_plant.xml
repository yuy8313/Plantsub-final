<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEEDF5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:padding="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">


            <Button
                android:id="@+id/addGallery"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_carmer"
                android:fontFamily="@font/maplestory_bold"
                android:textSize="25dp"
                android:layout_gravity="right"
                android:text="도감에 추가"
                />



            <ImageView
                android:id="@+id/flower_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/maplestory_bold"
                android:textColor="#000000"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/flower_flower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/chosun_centennial"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/flower_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/chosun_centennial"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/goGallery"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_carmer"
                android:fontFamily="@font/maplestory_bold"
                android:textSize="25dp"
                android:text="나의 도감"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>